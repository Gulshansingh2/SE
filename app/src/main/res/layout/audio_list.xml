<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/audioPlayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"
            android:clickable="true"
            android:layout_marginTop="10dp"
            app:srcCompat="@android:drawable/ic_media_play"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/tvAudioUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/audioPlayButton"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/audioPlayButton"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvAudiocaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAudioUsername"
            android:layout_alignStart="@+id/tvAudioUsername"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tvAudiocaption"
            app:srcCompat="@drawable/audio" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>